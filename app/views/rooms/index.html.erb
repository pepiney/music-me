  <h2 class="btn btn-ghost d-flex"><%= link_to "Home", root_path  %> </h2>
<div class="row justify-content-center">
  <h1 class="text-center">Salles de répétition à Marseille</h1>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-8 mt-5">
            <% @rooms.each do |room| %>
            <div class="card">
                <div class="card-horizontal d-flex">
                    <div class="img-square-wrapper">
                        <img class="" src="<%=room.photo%>" alt="Card image cap" width="300" height="180">
                    </div>
                    <div class="card-body ">
                        <h4 class="card-title"><%= link_to room.name, room_path(room)  %></h4>
                        
                        
                        <p class="card-text"><%= room.description %></p>
                    </div>
                </div>
                <div class="card-footer">
                    <small class="text-muted"><%=room.address %></small>
                </div>
            </div>
            <%end%>
        </div>
    </div>
</div>
