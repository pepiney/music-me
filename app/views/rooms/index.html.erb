<%= link_to "Home", root_path, class: "btn btn-secondary text-decoration-none"  %>

  <div class="row justify-content-center" class="containerroom">
  <h1 class="text-center"> Vos Music Rooms pr√®s de chez vous </h1>
</div>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-8 mt-5">
            <% @rooms.each do |room| %>
            <div class="card">
                <div class="card-horizontal d-flex">
                    <div class="img-square-wrapper">
                        <img class="" src="<%=room.photo%>" alt="Card image cap" width="300" height="180">
                    </div>
                    <div class="card-body ">
                        <h4 class="card-title"><%= link_to room.name, room_path(room)  %></h4>


                        <p class="card-text"><%= room.description %></p>
                        <p class="card-text"><%= link_to "Plus d'infos ...", room_path(room) %></p>
                    </div>
                </div>
                <div class="card-footer">
                    <p class="text-muted"><%=room.address %></p>
                </div>
            </div>
            <%end%>
        </div>
    </div>
</div>
<br>
